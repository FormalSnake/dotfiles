# Aliases

# Git shortcuts
alias add 'git add'
alias commit 'git commit'
alias push 'git push'
alias nah 'git reset --hard && git clean -df'
alias commitai 'set commit_message (lumen draft); and git commit -avm "$commit_message"'

# System utilities
alias ls 'ls -A --color'
alias vim nvim
alias cd z

# Nix shortcuts
alias nixrb 'clear && nh darwin switch .'
alias nixrbgc 'clear && nh darwin switch . && nh clean all'

# FormalConf
alias formalconf 'formalconf.sh'

