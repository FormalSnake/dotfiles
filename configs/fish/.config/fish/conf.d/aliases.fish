# Aliases

# Git shortcuts
alias add 'git add'
alias commit 'git commit'
alias push 'git push'
alias nah 'git reset --hard && git clean -df'
alias commitai 'set commit_message (lumen draft); and git commit -avm "$commit_message"'

# System utilities
alias ls 'ls -A --color'
alias vim nvim
alias cd z

# Modern CLI replacements
alias cat bat
alias grep rg
alias find fd
alias top btop

# Tool shortcuts
alias lg lazygit
alias ld lazydocker
alias y yazi